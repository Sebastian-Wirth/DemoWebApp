@model DemoWebApp.Models.MixedViewModel

@{
    ViewData["Title"] = "Händlerzugriff";
}

<body>
    <div class="">
        <div class="product-db">
            <h3>Produktdatenbank</h3>
            <p> Hier können die Produkte verwaltet werden.</p>

            <p>
                <a asp-controller="Products" asp-action="Create">Neues Produkt hinzufügen</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <p>Name</p>
                        </th>
                        <th>
                            <p>Preis</p>
                        </th>
                        <th>
                            <p>Bilddatei-Link</p>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ImageUrl)
                            </td>
                            <td>
                                <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Bearbeiten</a>
                                <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Entfernen</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="empty">
            <br />
        </div>

        <div class="customer-db">
            <h3>Kundendatenbank</h3>
            <p> Hier kann der Kundenstamm verwaltet werden.</p>

            <p>
                <a asp-controller="Customers" asp-action="Create">Neuen Kunden anlegen</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <p>Name</p>
                        </th>
                        <th>
                            <p>Kreditkartennummer</p>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Customers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @item.CreditCardNo.Substring(0,Math.Min(item.CreditCardNo.Length,80))
                            </td>
                            <td>
                                <a asp-controller="Customers" asp-action="Edit" asp-route-id="@item.Id">Bearbeiten</a>
                                <a asp-controller="Customers" asp-action="Delete" asp-route-id="@item.Id">Entfernen</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
