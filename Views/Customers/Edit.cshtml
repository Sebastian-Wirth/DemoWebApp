@model DemoWebApp.Models.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="carpet">
    <h4>Kundeneintrag bearbeiten</h4>
    <hr />
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Kreditkartennummer</label>
                <input asp-for="CreditCardNo" class="form-control" />
                <span asp-validation-for="CreditCardNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Speichern" class="btn btn-primary" />
                <a asp-controller="Merchant" asp-action="Index">Zurück</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
